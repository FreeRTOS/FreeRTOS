LR_IROM1 0x1C000000 0x400000  {    ; load region size_region

  ER_IROM1 0x1C000000 0x400000  {  ; load address = execution address

   *.o (RESET, +First)
   *(InRoot$$Sections)
   .ANY (+RO)
  }

; #define M4_RAM_START	0x10000000	/* 96 Kbytes */
