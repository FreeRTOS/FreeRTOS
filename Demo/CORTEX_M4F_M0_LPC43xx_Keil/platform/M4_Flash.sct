  ; this region includes just the relocated vector table
  ; not used by anything else
  ER_RELOCIRQ 0x10000000 0xC0 {
  }
  
  RW_IRAM1 +0 (0x18000 - 0xC0) {  ; RW data

   .ANY (+RW +ZI)
  }

